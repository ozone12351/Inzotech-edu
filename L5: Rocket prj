#include <SPI.h>
#include <SD.h>
#include <Adafruit_BMP085.h>
#include <Wire.h>

File myFile;  //ตั้งค่าตัวแปรประเภท ไฟล์ ชื่อ myfile
int co = 0;
int height = 0;
int bar = 0;
int alt = 0;
int seapa = 0;
int temp = 0;
int i = 0;

#define seaLevelPressure_hPa 1013.25
Adafruit_BMP085 bmp;

void setup() {
  Serial.begin(9600);
  while (!Serial) {
    ;  // รอให้คอมเริ่มคุยกับบอร์ด
  }
  Serial.print("Initializing SD card...");
  if (!SD.begin(10)) {
    Serial.println("initialization failed!");  // เริ่มตั้งค่า sd card ให้คุยกับบอร์ด
    while (1)
      ;
  }
  Serial.println("initialization done.");

  if (!bmp.begin()) {
    Serial.println("Could not find a valid BMP085 sensor, check wiring!");
    while (1) {}
  }
  // open the file. note that only one file can be open at a time,
  // so you have to close this one before opening another.
  
}
void loop() {

  // เก็บข้อมูล
  Serial.print("Temperature = ");
  temp = bmp.readTemperature();
  Serial.print(temp);
  Serial.println(" *C");

  Serial.print("Pressure = ");
  bar = bmp.readPressure();
  Serial.print(bar);
  Serial.println(" Pa");

  Serial.print("Altitude = ");
  alt = bmp.readAltitude();
  Serial.print(alt);
  Serial.println(" meters");

  Serial.print("Pressure at sealevel (calculated) = ");
  seapa = bmp.readSealevelPressure();
  Serial.print(seapa);
  Serial.println(" Pa");

  Serial.print("Real altitude = ");
  height = bmp.readAltitude(seaLevelPressure_hPa * 100);
  Serial.print(height);
  Serial.println(" meters");

  Serial.println();

  co = analogRead(A0);
  Serial.print("CO: ");
  Serial.println(co);


  myFile = SD.open("log.txt", FILE_WRITE);  // สร้างไฟล์ที่ชื่อ log.txt ใส่ตัวแปร myfile
  

  if (myFile) {
    Serial.print("Writing to log.txt...");
    myFile.print("DATA ");
    myFile.println(i);

    myFile.print("Height: ");
    myFile.println(height);

    myFile.print("Temp: ");
    myFile.print(temp);
    myFile.println(" C");

    myFile.print("Presure: ");
    myFile.print(bar);
    myFile.println(" PA");

    myFile.print("CO: ");
    myFile.println(co);

    myFile.println("       ");
    // ปิดไฟล์
    myFile.close();
    Serial.println("done.");
  } else {
    // ถ้าเปิดไฟล์ไม่ได้ให้ขึ้น error
    Serial.println("error opening log.txt");
  }

  i++;
  delay(100);
}
